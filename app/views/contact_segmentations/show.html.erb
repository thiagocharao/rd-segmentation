<%- model_class = ContactSegmentation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @contact_segmentation.description %></dd>
  <dd>
    <dl class="dl-horizontal">
      <% for filter_condition in @contact_segmentation.filter_conditions %>
        <%= filter_condition.field %>
      <% end %>
    </dl>
  </dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              contact_segmentations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_segmentation_path(@contact_segmentation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_segmentation_path(@contact_segmentation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
