<%- model_class = ContactSegmentation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @contact_segmentation.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.list")),
              contact_segmentations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_segmentation_path(@contact_segmentation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_segmentation_path(@contact_segmentation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= @contacts.human_attribute_name(:id) %></th>
      <th><%= @contacts.human_attribute_name(:name) %></th>
      <th><%= @contacts.human_attribute_name(:age) %></th>
      <th><%= @contacts.human_attribute_name(:role) %></th>
      <th><%= @contacts.human_attribute_name(:email) %></th>
      <th><%= @contacts.human_attribute_name(:state) %></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.id, contact_path(contact) %></td>
        <td><%= contact.name %></td>
        <td><%= contact.age %></td>
        <td><%= contact.role %></td>
        <td><%= contact.email %></td>
        <td><%= contact.state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
